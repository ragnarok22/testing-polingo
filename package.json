{
  "name": "testing-polingo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "i18n:extract": "polingo extract src/ --out locales/messages.pot --locales locales",
    "i18n:compile": "polingo compile locales/ --format json --out public/i18n",
    "i18n:validate": "polingo validate locales",
    "i18n:validate:strict": "polingo validate locales --strict",
    "i18n:update": "pnpm i18n:extract && pnpm i18n:compile",
    "i18n:init": "pnpm --filter @polingo/cli build && pnpm i18n:compile"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "@polingo/core": "workspace:*",
    "@polingo/web": "workspace:*",
    "@polingo/react": "workspace:*"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "@polingo/cli": "workspace:*",
    "vite": "^7.1.7"
  }
}
